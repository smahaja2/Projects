                <textarea rows="4" cols="50" name="content" id = 'content' form="submitComment" ></textarea>
                </br></br>
                <input type='submit' id = 'submit' name ='submit' value='Submit' />
              </form>
              
              </br>
             <a href="/inbox" class="btn btn-default">Back to Inbox</a>
        </div>
        
    </div>
