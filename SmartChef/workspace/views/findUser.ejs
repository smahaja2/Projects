<!doctype html>
<html>
<head>
    <title>Welcome</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body { 
            padding-top:80px; 
            word-wrap:break-word; 
            
        }
        
        .well {
            width: 50%;
            margin: 0 auto;
        }
        ul { 
            padding: 1em; 
            
        }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> Find Users</h1>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6" style="width:100%;">
            <div class="well">
                <div style="text-align:center;">
                    <form  action="/findUser" method="post">
                        <input type="text" name="nom" id="nom" value="">
                        <button type="submit" class="btn btn-warning btn-sm">Find</button>
                    </form>
                </div>
                
            </div>
            <div style="margin-left:40%;">
                <% if(results) { %>
                    <h1> Results:</h1>
                    <ul>
                        <%  for(var i=0;i<results.length;i++){ %>
                        <li><%= results[i].Name%> <a href="/details/<%= results[i].user_id%>">details</a></li>
                        <% } %>
                        <% } %>
                    </ul>
                </br>
                <a style="margin-left:7%;" href="/profile" class="btn btn-default">Back to Profile</a>
            </div>
        </div>

    </div>

</div>
</body>
</html>